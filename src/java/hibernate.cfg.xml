<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:orcl</property>
    <property name="hibernate.connection.username">academia</property>
    <property name="hibernate.connection.password">academia</property>
    <mapping resource="pro/modelo/pojos/TipoDocumento.hbm.xml"/>
    <mapping resource="pro/modelo/pojos/Turno.hbm.xml"/>
    <mapping resource="pro/modelo/pojos/Campana.hbm.xml"/>
    <mapping resource="pro/modelo/pojos/Aula.hbm.xml"/>
    <mapping resource="pro/modelo/pojos/Curso.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
